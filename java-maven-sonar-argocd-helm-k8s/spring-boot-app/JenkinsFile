pipeline {
  agent {
    docker {
      image 'sanjayharish/maven-docker-agent:v1' // ‚úÖ You can customize this if you have your own Docker agent
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  environment {
    PROJECT_DIR = 'java-maven-sonar-argocd-helm-k8s/spring-boot-app'
    SONAR_URL = "http://54.172.169.91:9000"
    DOCKER_IMAGE = "sanjayharish/my-spring-app:${BUILD_NUMBER}" // ‚úÖ Your DockerHub image
    GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
    GIT_USER_NAME = "sanjayhar"
  }

  stages {
    stage('Checkout') {
      steps {
        echo "‚úÖ Code checked out"
      }
    }

    stage('Build and Test') {
      steps {
        dir("${env.PROJECT_DIR}") {
          sh 'mvn clean package'
        }
      }
    }

    stage('Static Code Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          dir("${env.PROJECT_DIR}") {
            sh '''
              mvn sonar:sonar \
                -Dsonar.login=$SONAR_AUTH_TOKEN \
                -Dsonar.host.url=$SONAR_URL
            '''
          }
        }
      }
    }

    stage('Build and Push Docker Image') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'docker-cred', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
          dir("${env.PROJECT_DIR}") {
            sh '''
              echo "üî® Building Docker image: $DOCKER_IMAGE"
              docker build -t $DOCKER_IMAGE .
              echo $PASSWORD | docker login -u $USERNAME --password-stdin
              docker push $DOCKER_IMAGE
              docker logout
            '''
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config user.email "sanjay@example.com"
            git config user.name "Sanjay Harish"

            echo "üõ†Ô∏è Updating deployment file with image tag ${BUILD_NUMBER}"
            sed -i "s|replaceImageTag|${BUILD_NUMBER}|g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "‚ö†Ô∏è No changes to commit"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
          '''
        }
      }
    }
  }
}
